# AIOps RAG System Environment Configuration
# Copy this file to .env and update with your values

# ========== LLM Configuration ==========
# Gemini API Key (Required)
GEMINI_API_KEY=your-gemini-api-key-here

# ========== Application Configuration ==========
# Application host and port
APP_HOST=0.0.0.0
APP_PORT=8000

# Environment (development, staging, production)
ENVIRONMENT=development

# ========== Logging Configuration ==========
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable JSON logs (true/false)
JSON_LOGS=true

# Log file path (optional)
LOG_FILE=/var/log/rag/app.log

# ========== Observability Configuration ==========
# Jaeger endpoint for distributed tracing
JAEGER_ENDPOINT=localhost:6831

# OpenTelemetry Protocol (OTLP) endpoint
OTLP_ENDPOINT=localhost:4317

# Enable console tracing (true/false)
TRACE_CONSOLE=false

# Metrics port
METRICS_PORT=8000

# ========== Database Configuration ==========
# OpenSearch configuration
OPENSEARCH_HOST=localhost
OPENSEARCH_PORT=9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin

# Redis configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ========== Cache Configuration ==========
# Cache TTL in seconds
CACHE_TTL=3600

# Enable smart caching (true/false)
ENABLE_SMART_CACHE=true

# ========== State Persistence Configuration ==========
# State database path
STATE_DB_PATH=/data/state.db

# Enable state persistence (true/false)
ENABLE_STATE_PERSISTENCE=true

# State checkpoint interval (seconds)
STATE_CHECKPOINT_INTERVAL=300

# ========== Vector Search Configuration ==========
# KNN algorithm (hnsw, flat, ivf)
KNN_ALGORITHM=hnsw

# HNSW parameters
HNSW_EF_CONSTRUCTION=200
HNSW_M=16

# Vector dimension
VECTOR_DIMENSION=768

# ========== RAG Configuration ==========
# Number of documents to retrieve
TOP_K_DOCUMENTS=5

# Similarity threshold
SIMILARITY_THRESHOLD=0.7

# Enable HyDE (Hypothetical Document Embeddings)
ENABLE_HYDE=true

# Enable RAG-Fusion
ENABLE_RAG_FUSION=true

# ========== LangExtract Configuration ==========
# Enable structured information extraction
ENABLE_LANGEXTRACT=true

# Extraction confidence threshold
EXTRACTION_CONFIDENCE_THRESHOLD=0.8

# ========== API Rate Limiting ==========
# Rate limit per minute
RATE_LIMIT_PER_MINUTE=100

# Rate limit burst size
RATE_LIMIT_BURST=20

# ========== Security Configuration ==========
# API Key (optional, for additional security)
API_KEY=

# CORS allowed origins
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# ========== Performance Configuration ==========
# Worker threads
WORKER_THREADS=4

# Request timeout (seconds)
REQUEST_TIMEOUT=300

# ========== Feature Flags ==========
# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable debug mode
DEBUG_MODE=false